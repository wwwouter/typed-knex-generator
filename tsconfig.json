{
    "compilerOptions": {
        "module": "commonjs",
        "sourceMap": false,
        "target": "ES2017",
        "experimentalDecorators": true,
        "strict": true,
        "strictPropertyInitialization": false,
        "noUnusedLocals": true,
        "emitDecoratorMetadata": true,
        "skipLibCheck": true,
        "outDir": "build",
        "noUnusedParameters": true,
        "inlineSourceMap": true,
        "inlineSources": true,
        "noImplicitReturns": true,
        "noImplicitThis": true,
        "declaration": true
    },
    "include": [
        "src/**/*",
        "test/**/*"
    ],
    "exclude": [
        "node_modules",
        "**/*.spec.ts"
    ]
}